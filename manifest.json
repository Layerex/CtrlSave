{
  "manifest_version": 2,
  "name": "CtrlSave",
  "short_name": "CtrlSave",
  "author": "Layerex",
  "description": "Save images from various sites by pressing Ctrl+S lightly",
  "homepage_url": "https://github.com/Layerex/ctrlsave",
  "version": "0.0.1",
  "permissions": [
    "downloads",
    "declarativeContent",
    "*://*.vk.com/*",
    "*://*.userapi.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*", "*://*.discord.com/*"],
      "js": ["content.js"]
    }
  ]
}
