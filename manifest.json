{
  "manifest_version": 2,
  "name": "VkSave",
  "short_name": "VkSave",
  "author": "Layerex",
  "description": "Сохраняйте изображения с vk.com лёгким нажатием на Ctrl+S",
  "homepage_url": "https://github.com/Layerex/vksave",
  "version": "0.0.1",
  "permissions": [
    "downloads",
    "declarativeContent",
    "*://*.vk.com/*",
    "*://*.userapi.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.vk.com/*", "*://*.discord.com/*"],
      "js": ["content.js"]
    }
  ]
}
